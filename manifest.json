{
  "name": "Task Manager",
  "version": "0.0.1",
  "description": "An Extension to track the tasks in day to day basis!!",
  "manifest_version": 2,
  "author": "srinath",
  "background": {
    "scripts": [
      "assets/js/firebase.min.js",
      "assets/js/firebase-auth.min.js",
      "background/main.js",
      "background/api.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "storage",
    "identity"
  ],
  "browser_action": {
    // "default_icon": "./assets/img/icon.png",
    "default_popup": "./popup/popup.html"
  },
  "icons": {
  },
  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'"
}